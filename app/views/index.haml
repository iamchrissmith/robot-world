%h1= "My Robots"
%a.btn.btn-primary(href="/robots/new")= "New Robot"
%ul.container.row.list-unstyled
  - @robots.each do |robot|
    %li.col-md-4
      .col-md-12
        %img(src="https://robohash.org/#{robot.name}-#{robot.id}.png")
        %h1= robot.name
        %p= robot.city+", "+robot.state
        %p= robot.department
      %p.col-md-6.text-center
        %a.col-md-12.btn.btn-info(href="/robots/#{robot.id}/edit")
          %span.glyphicon.glyphicon-pencil(aria-hidden="true")
          ="Edit"
      %form.col-md-6.text-center(action="/robots/#{robot.id}" method="POST")
        %input(type="hidden" name="_method" value="DELETE")
        %button.btn.btn-danger(type="submit")
          %span.glyphicon.glyphicon-alert(aria-hidden="true")
          = "SELF DESTRUCT!"
%form(action="/robots/all" method="post")
  %input(type="hidden" name="_method" value="DELETE")
  %button.btn(type="submit")
    %span.glyphicon.glyphicon-alert(aria-hidden="true")
    = "Destroy all!"
