%form(action="/robots/#{@robot.id}" method="post")
  %p= "Update the information for your robot"
  %input(type="hidden" name="_method" value="PUT")
  %img(src="https://robohash.org/#{@robot.name}-#{@robot.id}.png")
  %input(type="text" placeholder="Name" name="robot[name]" value="#{@robot.name}")
  %input(type="text" placeholder="City" name="robot[city]" value="#{@robot.city}")
  %input(type="text" placeholder="State" name="robot[state]" value="#{@robot.state}")
  %input(type="text" placeholder="Department" name="robot[department]" value="#{@robot.department}")
  %input(class="btn btn-primary" type="submit")
