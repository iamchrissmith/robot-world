%form(action="/robots" method="post")
  %p= "Enter the information for your new robot"
  %input(type="text" placeholder="Name" name="robot[name]")
  %input(type="text" placeholder="City" name="robot[city]")
  %input(type="text" placeholder="State" name="robot[state]")
  %input(type="text" placeholder="Department" name="robot[department]")
  %input.btn.btn-success(type="submit")
